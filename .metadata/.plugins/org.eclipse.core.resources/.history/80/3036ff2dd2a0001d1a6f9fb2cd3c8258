package com.dorukbiyikli;

import java.util.Scanner; // Scanner librarysini import et

public class KullanicidanVeriAlmaScanner {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in); // Scanner bir class javanın kendi classı
												// input Scanner classının bir objecti
		System.out.println("Lütfen bir sayı giriniz: ");
		int sayi1 = 0;
		sayı1 = input.nextInt(); //Scans the next token of the input as an int.  
	}

}
